{% extends "base.html.twig" %}

{% block body %}

    {% block header %}
    <header class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                {% block brand %}
                    <a class="navbar-brand" href="{{ path('afup_barometre_homepage') }}">Baromètre</a>
                {% endblock %}
            </div>
            <div class="navbar-right">
                <a href="http://www.afup.org" target="_blank">
                    <img src="/logos/logo-afup.png" alt="AFUP" class="logo afup" />
                </a>
                <a href="http://www.agence-e.fr" target="_blank">
                    <img src="/logos/logo-agencee.png" alt="Agence E" class="logo agencee mg-right" />
                </a>
            </div>
        </div>
    </header>
    {% endblock header %}

    {% block main %}
    <div class="container-fluid main">
        <div class="row">
            <aside class="menu col-md-3">
                {% block menu knp_menu_render('menu') %}
            </aside>

            <section class="content col-md-offset-3 col-md-9">
                {% block content '' %}
            </section>
        </div>
    </div>
    {% endblock main %}

    {% block footer %}
    <footer class="page-footer col-md-offset-3 col-md-9">
        <div class="content">
            <p>Baromètre <a href="http://www.afup.org" target="_blank">AFUP</a> – <a href="http://www.agence-e.fr" target="_blank">Agence-e</a> 2014</p>
        </div>
    </footer>
    {% endblock footer %}

{% endblock body %}